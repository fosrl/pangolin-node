        "drizzle-orm": "0.44.7",
        "eslint": "9.38.0",
        "eslint-config-next": "15.5.6",
        "express": "5.1.0",
        "express-rate-limit": "8.1.0",
        "helmet": "8.1.0",
        "http-errors": "2.0.0",
        "js-yaml": "4.1.0",
        "node-cache": "5.1.2",
        "pg": "8.16.3",
        "react": "19.2.0",
        "winston": "3.18.3",
        "winston-daily-rotate-file": "5.0.0",
        "ws": "8.18.3",
        "yargs": "18.0.0",
        "zod": "4.1.12",
        "zod-validation-error": "4.0.2"
    },
    "devDependencies": {
        "@types/cookie-parser": "1.4.10",
        "@types/cors": "2.8.19",
        "@types/express": "5.0.4",
        "@types/js-yaml": "4.0.9",
        "@types/node": "24.9.1",
        "@types/pg": "8.15.5",
        "@types/ws": "8.18.1",
        "esbuild": "0.25.11",
        "esbuild-node-externals": "1.18.0",
